<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="huge_font_size">20sp</dimen>
    <dimen name="large_font_size">14sp</dimen>
    <dimen name="medium_font_size">14sp</dimen>

    <style name="title_text">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/huge_font_size</item>
    </style>

    <style name="big_body_text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="regular_body_text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

</resources>